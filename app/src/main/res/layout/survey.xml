<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Survey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:title="금융팔레트"/>


        <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:paddingStart="30dp"
            android:background="@color/light_blue"
        android:text="사전 조사"
        android:textColor="@color/black"
        android:textSize="27sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="147dp" />

        <TextView
            android:id="@+id/q1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="5dp"
            android:text="Q1 연령대를 알려주세요."
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/rg_age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <RadioGroup
            android:id="@+id/rg_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:layout_editor_absoluteX="57dp">

            <RadioButton
                android:id="@+id/rb_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10대"
                android:textSize="15dp"
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20대"
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30대"
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40대"
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50대"
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60대 이상"
                android:textColor="@color/dark_gray" />

        </RadioGroup>

        <TextView
            android:id="@+id/q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:text="Q2 성별을 알려주세요."
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/rg_i"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_age" />

        <RadioGroup
        android:id="@+id/rg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남성"
            android:textSize="16sp"
            android:textColor="@color/dark_gray" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여성"
            android:textSize="16sp"
            android:textColor="@color/dark_gray"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="491dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:text="Q3 금융상품을 선택할 때 나는"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rg_select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rg_i" />

    <RadioGroup
        android:id="@+id/rg_select1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RadioButton
            android:id="@+id/rb_1finance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1금융만 고려한다\n(KB, IBK, BNK, 카카오, 토스 등)"
            android:textSize="16sp"
            android:textColor="@color/dark_gray" />

        <RadioButton
            android:id="@+id/rb_2finance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2금융도 함께 본다\n(새마을금고, 저축은행 등)"
            android:textSize="16sp"
            android:textColor="@color/dark_gray" />
    </RadioGroup>

        <TextView
            android:id="@+id/q4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:text="Q4 나는"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg_select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp" >

            <RadioButton
                android:id="@+id/rb_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:text="이용 중인 은행이 아니라면\n고금리여도 가입하고 싶지 않다."
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/rb_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="고금리라면\n이용 중이지 않은 은행이어도 좋다."
                android:textColor="@color/dark_gray" />
        </RadioGroup>

        <TextView
            android:id="@+id/q5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:text="Q5 최고한도(예치금액)"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg_select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp" >

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상관없음"
                android:textColor="@color/dark_gray" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1천만 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5천만 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1억 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5억 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10억 이하"
                android:textColor="@color/dark_gray"/>
        </RadioGroup>

        <TextView
            android:id="@+id/q6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:text="Q6 정기예금 가입 시 원하는 저축기간"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg_select4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp" >

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상관없음"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6개월 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12개월 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24개월 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="36개월 이하"
                android:textColor="@color/dark_gray"/>
        </RadioGroup>

        <TextView
            android:id="@+id/q7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="5dp"
            android:text="Q7 정기적금 가입 시 원하는 저축기간"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg_select5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp" >

            <RadioButton
                android:id="@+id/radioButton14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상관없음"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6개월 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12개월 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24개월 이하"
                android:textColor="@color/dark_gray"/>

            <RadioButton
                android:id="@+id/radioButton18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="36개월 이하"
                android:textColor="@color/dark_gray"/>
        </RadioGroup>

        <Button
        android:id="@+id/btn_finish"
        android:layout_width="360dp"
        android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
        android:background="@drawable/solid_button"
            android:backgroundTint="@color/blue"
        android:text="사전조사 완료"
        android:textSize="20sp"
            android:textColor="@color/white"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="659dp" />

    </LinearLayout>
</ScrollView>